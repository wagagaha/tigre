---
import { Image } from "astro:assets";
import logo from "../assets/img/logo.png";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url) as string;
const t = useTranslations(lang);
---

<div
  class="w-full h-full max-w-7xl mx-auto flex items-center justify-between px-12 max-sm:px-6 font-thin"
>
  <div class="w-10 h-10 rounded-full overflow-hidden">
    <Image src={logo} alt="wagagaha, generated by Midjourney" />
  </div>
  <div class="flex flex-auto gap-8 justify-center">
    <div class="flex items-center gap-12 border px-4 py-2 rounded-full">
      <a href={`/${lang}/`}>
        {t("nav.home")}
      </a>
      <a href={`/${lang}/blog/`}>
        {t("nav.blog")}
      </a>
      <a href={`/${lang}/project/`}>
        {t("nav.project")}
      </a>
      <a href={`/${lang}/about/`}>
        {t("nav.about")}
      </a>
    </div>
  </div>
</div>
